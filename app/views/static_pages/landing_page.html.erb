<%= javascript_include_tag 'landing_page' %>

<div id='fullPage'>
  <section class="vertical-scrolling">
    <% @slide_images.each do |slide_image| %>
      <div class="horizontal-scrolling slide<%=slide_image.row_order%> slides" style="background-image: url(<%= slide_image.photo.cover %>)">
          <div class='slide-container col-xs-10 col-xs-offset-1 col-md-6 col-md-offset-3'>
            <h2 class='slide-description' data-slide='<%=slide_image.row_order%>'><%=slide_image.description%><p class='underbar'>___</p></h2>            
          </div>
        </div>
    <% end %>
  </section>
</div>

<div class='slide-control-container'>
  <div class'slide-control-statusbar-max'>
    <div class='slide-control-status'>&nbsp</div>
  </div>
  <div class='slide-control'>
    <div class='col-xs-1' id='play-button'><%= image_tag('pause-button.png')%></div>
    <div class='col-xs-1' id='slide-counter'><span class='current-slide-index'>1</span>/<%= @slide_images.count %></div>
    <div class='col-xs-1'id='slide-caption'><%= @slide_images.first.description %></div>
    <ul class='col-xs-6' id= 'slide-list'>
      <% @slide_images.each_with_index do |slide_image, index| %>
        <% active='active' if index == 0 %>
        <li class='list-button <%=active%>' id='list-button-<%=index%>'><a href="/#firstPage/slide<%=index+1%>">&nbsp</a></li>
      <% end %>      
    </ul>
  </div>
</div>